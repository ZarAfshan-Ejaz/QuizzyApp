<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.Admin_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="22dp"
                android:text="Add New Quiz" />

            <EditText
                android:id="@+id/et_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text=""
                android:hint="Enter Question"
                android:maxLines="3" />

            <EditText
                android:id="@+id/et_right_ans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="13dp"
                android:hint="Enter Right answer"
                android:maxLines="3" />

            <EditText
                android:id="@+id/et_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="13dp"
                android:hint="Enter Reason"
                android:maxLines="3" />

            <EditText
                android:id="@+id/et_opt_a"
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:hint="Enter Option A "
                android:maxLines="3" />

            <EditText
                android:id="@+id/et_opt_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="13dp"
                android:hint="Enter Option B"
                android:maxLines="3" />

            <EditText
                android:id="@+id/et_opt_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="13dp"
                android:hint="Enter Option C"
                android:maxLines="3" />

            <EditText
                android:id="@+id/et_opt_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text=""
                android:hint="Enter Option D"
                android:maxLines="3" />

            <EditText
                android:id="@+id/et_dom_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text=""
                android:hint="Enter Domain ID"
                android:maxLines="3" />

            <EditText
                android:id="@+id/et_dom_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text=""
                android:hint="Enter Domain Name"
                android:maxLines="3" />

            <EditText
                android:id="@+id/et_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="13dp"
                android:hint="Enter Subject"
                android:maxLines="3" />
            <EditText
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:hint="Enter Date dd-mm-yyyy"
                android:visibility="gone"
                android:maxLines="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_marginTop="15dp"
                    android:text="Select Quiz Category"/>
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioBtnQuizBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz Bank"/>

                <RadioButton
                    android:id="@+id/radioBtnQotD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question of the day"/>

                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/btn_add_quz"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/round_btn"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"

                android:text="Add Quiz"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>