<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_close_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/close" />

            <ImageView
                android:id="@+id/img_quiz_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/quick_10_quiz" />

            <TextView
                android:id="@+id/tv_testing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Testing"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_question_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="Question 4 / 10"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="A cloud architect needs to ensure  seamless transition to the disaster Recovery RD site given a disaster?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/ll_main_op_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/card_border"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:id="@+id/ll_op_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_op_a"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="A notification with today's Question of the Day"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/img_res_op_a"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/right_mark"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_op_a_exp_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show Explanation"
                        android:textColor="@color/blue_font"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/drop_down_arrow" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_correct_ans_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correct Answer: A notification with today's Question of the Day \n \n A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day  \n \n A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day "
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_op_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_border"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:id="@+id/ll_op_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_op_b"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="A notification with today's Question of the Day"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/img_res_op_b"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/right_mark"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_op_b_exp_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show Explanation"
                        android:textColor="@color/blue_font"
                        android:textSize="18sp" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/drop_down_arrow" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_correct_ans_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correct Answer: A notification with today's Question of the Day \n \n A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day  \n \n A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day "
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_op_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_border"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:id="@+id/ll_op_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_op_c"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="A notification with today's Question of the Day"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/img_res_op_c"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/right_mark"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_op_c_exp_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show Explanation"
                        android:textColor="@color/blue_font"
                        android:textSize="18sp" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/drop_down_arrow" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_correct_ans_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correct Answer: A notification with today's Question of the Day \n \n A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day  \n \n A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day A notification with today's Question of the Day "
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_op_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_border"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:id="@+id/ll_op_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_op_d"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="A notification with today's Question of the Day"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/img_res_op_d"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/right_mark"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_op_d_exp_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show Explanation"
                        android:textColor="@color/blue_font"
                        android:textSize="18sp" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/drop_down_arrow" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_correct_ans_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />


            </LinearLayout>

